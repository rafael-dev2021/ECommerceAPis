<div class="dropdown">
    <a class="dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-expanded="false">
        Categories
    </a>

    <ul class="dropdown-menu">
        @foreach (var item in Model)
        {
            <li>
                <a class="dropdown-item" style="color:black" asp-controller="Product" asp-action="Index" asp-route-categoryId="@item.CategoryName">
                    @item.CategoryName
                </a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item" style="color:black" asp-controller="Product" asp-action="Index">
                Products
            </a>
        </li>

    </ul>
</div>